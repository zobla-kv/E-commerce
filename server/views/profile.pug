doctype html
include partials/head
link(rel='stylesheet' href='../styles/profile.css')
section#navbar
  #navbarItemsContainer.pagesContainer
    .pages
      p Home
    .pages
      p Shop
    .pages
      p About
  #navbarItemsContainer.searchContainer
    form#search
      // prettier-ignore
      input#searchInput.searchTerm(type='text' placeholder='What are you looking for?')
      button#searchButton(type='submit')
        i.fa.fa-search
  #navbarItemsContainer.profile
    div#cart
      img(src="/assets/img/cart.png")
    div#loggedInProfile
      p #{user.name}
    div#profileDropdown
      a(href="/profile/" + user._id)
        div.item#profile profile
        if user.admin
          a(href="/dashboard")
             div.item#dashboard dashboard
        div.item#logout log out
  div#updateProfile
    p update profile
    div#dropdown
      div#formContainer
        form
          label new password: &nbsp
          input(type="password")
          br
          br
          label#repeatPwText repeat password:
          input(type="password")#repeatInput
      div#btnAndResponse
        button#resetButton Reset
        div#response
  script(src='/js/profile.js' type='module')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TweenMax.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TimelineMax.min.js')



