doctype html
include partials/head
link(rel='stylesheet' href='../styles/shop.css')
include partials/navbar
section#contentContainer
  #filtersContainer
    #filters
      div
        button#clearSearch clear 
      #brandFiltersContainer
        | brand
        #brandFilters
          label.brandItem
            input(type='checkbox')#nikeFilter
            span.checkmark
            div.marks
            |                 nike
          label.brandItem
            input(type='checkbox')#adidasFilter
            span.checkmark
            div.marks
            |                 adidas
          label.brandItem
            input(type='checkbox')#pumaFilter
            span.checkmark
            div.marks
            |                 puma
          label.brandItem
            input(type='checkbox')#reebokFilter
            span.checkmark
            div.marks
            |                 reebok
      #genderFiltersContainer
        | gender
        #genderFilters
          label.brandItem
            input(type='checkbox')#maleFilter
            span.checkmark
            div.marks
            |                 male
          label.brandItem
            input(type='checkbox')#femaleFilter
            span.checkmark
            div.marks
            |                 female
      #sortFiltersContainer
        | sort by
        #genderFilters
          label.brandItem
            input(type='radio' name='sort' checked='true')#latestFilter
            span.checkmark
            div.marks
            |                 latest
          label.brandItem
            input(type='radio' name='sort')#priceFilter
            span.checkmark
            div.marks
            
            |                 price
  #shopItemsContainer
    each product in products
      a(href="/shop/products/" + product.name)
        .product
          .productImgContainer
            img(src=product.imagePath).productImg
          .productName #{product.name} - #{product.gender}
          .productPrice #{product.price} $
  script(src='../js/shop.js' type='module')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TweenMax.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TimelineMax.min.js')

